    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/minValueString_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/min_scale_label"
                style="@style/smalltext" />

            <TextView
                android:id="@+id/minValue_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/min_scale_val"
                style="@style/smalltext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/valueString_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/val_scale_label"
                style="@style/smalltext" />

            <TextView
                android:id="@+id/valueSm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/val_scale_val"
                style="@style/smalltext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/maxValueString_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/max_scale_label"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/maxValue_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+string/max_scale_val"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/companyStringName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@+string/company_name"
            style="@style/labeltext"
             />

        <TextView
            android:id="@+id/devModel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@+string/model_name"
            style="@style/labeltext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/minScale_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@+string/min_scale_val"
            style="@style/labeltext" />

        <TextView
            android:id="@+id/maxScale_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@+string/max_scale_val"
            style="@style/labeltext" />
    </LinearLayout>

    <TextView
        android:id="@+id/website_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@+string/company_url"
        style="@style/labeltext" />

</LinearLayout>